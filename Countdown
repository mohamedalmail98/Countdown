# countdown_app.py

import streamlit as st
from datetime import datetime

# Set the target date
target_date = datetime(2025, 8, 16, 0, 0, 0)

# Calculate the remaining time
now = datetime.now()
remaining = target_date - now

# Format output
days = remaining.days
hours, rem = divmod(remaining.seconds, 3600)
minutes, seconds = divmod(rem, 60)

# Display
st.set_page_config(page_title="Countdown to 16 August 2025")
st.title("🚀 Countdown to 16 August 2025")
st.markdown(f"""
## ⏳ Time Remaining:
**{days} days, {hours} hours, {minutes} minutes, {seconds} seconds**
""")

# Optionally update in real-time
st.caption(f"Current time: {now.strftime('%Y-%m-%d %H:%M:%S')}")
